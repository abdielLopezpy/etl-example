# Variables de entorno para el servicio CrmETL

# Puerto del servidor
PORT=3000

# Configuración de la base de datos SQLite
DB_PATH=./data/crm_etl.db

# Token de acceso a la API de HubSpot
# IMPORTANTE: Reemplazar con un token válido de una App Privada de HubSpot
HUBSPOT_ACCESS_TOKEN=your_hubspot_token_here

# URL base de la API de HubSpot
HUBSPOT_API_BASE_URL=https://api.hubapi.com

# Configuración de logging
LOG_LEVEL=info

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Entorno de la aplicación
NODE_ENV=development
